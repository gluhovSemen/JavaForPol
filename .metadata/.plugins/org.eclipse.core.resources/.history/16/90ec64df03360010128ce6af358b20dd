
class calculator {
public static void main (String args []) {
int i=0;
float res=-1;
if(args.length==0||args.length>3) {
System.out.println("Ошибка, пожалуйста, введите правильно параметр");
return;

	try{
		float x1=Float.parseFloat(args[0]);
		}catch(Exception e){System.err.println("Ошибка, введите число");
		return;}
		
}
float x1=Float.parseFloat(args[0]);
float x2=Float.parseFloat(args[2]);

switch (args[1].charAt(0)){
case '+':{res=x1+x2;break;}
case '-':{res=x1-x2;break;}
case '*':{res=x1*x2;break;}
case '/':{res=x1/x2;break;}
}
System.out.println(x1+args[1]+x2+"="+res);
}}