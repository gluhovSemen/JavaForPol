             go3   = new JButton("GO3")  ;
             go4   = new JButton("GO4")  ;
             Label= new JLabel();
             
          textArea.setEditable(false);
        
     
     
        Font font = new Font("Verdana", Font.BOLD, 12);
        textArea.setFont(font);
        
